{
  "manifest_version": 3,
  "name": "Google Forms Select to Autocomplete",
  "version": "1.0.1",
  "description": "Замінює відкриті випадаючі списки Google Forms на зручні поля з автокомплітом для швидкого пошуку",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/forms/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Select to Autocomplete"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
